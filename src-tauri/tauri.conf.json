{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DevTools",
  "version": "0.1.0",
  "identifier": "com.devtools.macos",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DevTools",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "category": "DeveloperTool",
    "shortDescription": "Developer Tools Collection",
    "longDescription": "A collection of developer tools including JSON formatter, Base64 encoder, URL encoder, and HTML encoder."
  }
}
